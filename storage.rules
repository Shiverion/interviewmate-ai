rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Candidate Resumes
    match /resumes/{allPaths=**} {
      // Recruiters can list and delete all resumes for cleanup
      allow list, delete: if request.auth != null;
      // Recruiters can upload resumes
      allow write: if request.auth != null;
      // Public read for AI backend downloading
      allow read: if true;
    }
    
    // Audio Recordings
    match /audio/{sessionId}/{fileName} {
      // Candidate can upload from the browser WebRTC stream capturing
      allow write: if true;
      // Recruiter reads 
      allow read: if request.auth != null;
    }
  }
}
