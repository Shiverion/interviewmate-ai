rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User Profiles (from Phase 2)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Scheduled Interview Sessions
    match /interview_sessions/{sessionId} {
      allow get, list, write: if request.auth != null;
    }

    // Candidate Reports
    match /candidate_reports/{reportId} {
      allow get, list, write: if request.auth != null;
    }
  }
}
